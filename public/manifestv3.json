{
  "name": "betterUI",
  "description": "Better Ui for ChatGPT",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Open the popup"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.global.js"
  },
  "icons": {
    "128": "vite.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["./index.global.js"],
      "css": ["./style.css"]
    }
  ]
}
